CREATE TABLE Club(
  id integer PRIMARY KEY,
  nombre varchar(30) NOT NULL,
  ciudad VARCHAR(30),
  pais VARCHAR(30),
  presupuesto INTEGER,
  escudo VARCHAR(30)
);

CREATE TABLE Liga(
  id_club INTEGER REFERENCES Club(ID),
  division INTEGER,
  pais varchar(30),
  confederacion VARCHAR(30)
);

CREATE TABLE Jugador(
  ID INTEGER PRIMARY KEY,
  fecha_nacimiento DATE,
  altura DECIMAL,
  peso DECIMAL,
  nacionalidad VARCHAR(30),
  nombre VARCHAR(30) not NULL,
  valor_mercado INTEGER,
  ID_club INTEGER REFERENCES Club(id)
);

create table Contrato_Jugador(
  fecha_inicio DATE,
  duracion_contrato SMALLINT,
  salario INTEGER,
  id_club INTEGER REFERENCES club(id),
  id_jugador INTEGER REFERENCES jugador(id)
);

CREATE TABLE Director_tecnico(
  ID INTEGER NOT NULL PRIMARY KEY,
  nacionalidad VARCHAR(30),
  fecha_nacimiento DATE,
  nombre VARCHAR(30) NOT NULL,
  ID_CLUB INTEGER REFERENCES Club(id),
);

create table Contrato_DT(
  fecha_inicio DATE,
  duracion_contrato SMALLINT,
  salario INTEGER,
  id_club INTEGER REFERENCES club(id),
  id_dt INTEGER REFERENCES Director_tecinico(id)
);

CREATE TABLE Entrenador(
  id INTEGER NOT NULL PRIMARY KEY,
  area VARCHAR(30),
  nombre VARCHAR(30) NOT NULL,
  ID_club INTEGER REFERENCES Club(id)
);

CREATE TABLE Posicion(
  posicion VARCHAR(30),
  posicion_especifica VARCHAR(30),
  nombre_jugador INTEGER REFERENCES Jugador(nombre)
);

create TABLE Uniforme(
  id INTEGER VARCHAR(30),
  tipo_uniforme VARCHAR(30),
  color_principal VARCHAR(30),
  color_secundario VARCHAR(30),
  id_club INTEGER REFERENCES club(id)
);

CREATE TABLE Equipacion(
  numero_camiseta SMALLINT PRIMARY KEY,
  talla SMALLINT,
  nombre_espalda VARCHAR(15),
  ID_jugador INTEGER REFERENCES Jugador(id),
  id_uniforme REFERENCES uniforme(id)
);

CREATE TABLE Estadio(
  capacidad INTEGER,
  nombre VARCHAR(50),
  ID_club INTEGER REFERENCES Club(id)
);

CREATE TABLE Patrocinador(
  marca VARCHAR(30),
  ID_club INTEGER REFERENCES Club(id)
);

CREATE TABLE Estadisticas_jugador(
  ID_jugador INTEGER REFERENCES Jugador(id),
  posicion_jugador VARCHAR(30) REFERENCES posicion(posicion_especifica),
  goles SMALLINT,
  asistencias SMALLINT,
  porcentaje_pases SMALLINT,
  minutos_jugados INTEGER,
  tarjetas_amarillas SMALLINT,
  tarjetas_rojas SMALLINT,
  camisetas_vendidas INTEGER,
  porteria_imbatida SMALLINT,
  poisicion_jugador VARCHAR(30) REFERENCES posicion(posicion_especifica) 
);

CREATE TABLE Estadisticas_Club(
  id_club INTEGER REFERENCES Club(ID),
  partidas_jugadas INTEGER,
  victorias INTEGER,
  empates INTEGER,
  derrotas INTEGER,
  goles_a_favor INTEGER,
  goles_en_contra INTEGER
);

CREATE TABLE Equipo_medico(
  id_club INTEGER REFERENCES Club(ID),
  especializacion VARCHAR(30),
  id integer PRIMARY KEY
);

CREATE TABLE Equipo_Utileria(
  id_club integer REFERENCES Club(ID),
  id INTEGER PRIMARY KEY,
  nombre VARCHAR(15)
);

CREATE TABLE Titulares(
  id INTEGER PRIMARY KEY,
  nombre_jugador VARCHAR(15) REFERENCES jugador(nombre),
  id_jugador INTEGER REFERENCES Jugador(ID)
);

CREATE TABLE Suplentes(
  id INTEGER PRIMARY KEY,
  nombre_jugador VARCHAR(15) NOT NULL REFERENCES jugador(nombre),
  id_jugador INTEGER REFERENCES Jugador(ID)
);

CREATE TABLE Alineacion(
  id_jugadores_iniciales INTEGER REFERENCES titulares(id),
  id_jugadoores_suplentes INTEGER REFERENCES suplentes(id),
  formacion varchar(30)
);
